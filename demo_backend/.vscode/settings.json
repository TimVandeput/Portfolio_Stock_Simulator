{
  // Hide compiled output and generated sources from the Problems view/indexer
  "java.configuration.excludeFolders": ["**/target/**", "**/.mvn/**"],
  // Exclude these from import scanning as well
  "java.import.exclusions": [
    "**/target/**",
    "**/.mvn/**",
    "**/.git/**",
    "**/node_modules/**"
  ],
  // Ensure annotation processors (MapStruct, Lombok) are enabled in the editor
  "java.configuration.enableAnnotationProcessing": true,
  // Let the Java extension update the project when pom.xml changes
  "java.configuration.updateBuildConfiguration": "interactive",
  // Optional: use JDT null analysis defaults
  "java.compile.nullAnalysis.mode": "automatic",
  // Use a full JDK 21 (with jdk.compiler) so @javax.annotation.processing.Generated resolves
  // The Java extension will pick the first path that exists and ignore the rest
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-21",
      "path": "C\\\\Program Files\\\\Eclipse Adoptium\\\\jdk-21"
    },
    { "name": "JavaSE-21", "path": "C\\\\Program Files\\\\Java\\\\jdk-21" },
    { "name": "JavaSE-21", "path": "C\\\\Program Files\\\\Microsoft\\\\jdk-21" }
  ],
  // Downgrade noisy classpath issues in editor (Maven build stays authoritative)
  "java.errors.incompleteClasspath.severity": "ignore"
}
